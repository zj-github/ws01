package cn.innohub.crawler.conf;

import cn.innohub.crawler.beans.ExtractRule;

/**
 * @ClassName: CrawlConf 
 * @Description: 配置文件上下文 
 * @author zhangjie
 * @date 2016年1月4日 上午10:19:28 
 *
 */
public class CrawlConf extends Configuration{

	public void addRule(String hostName, ExtractRule extractRule) {
		CrawlConf.getConf().addRule(hostName, extractRule);
	}

	public ExtractRule getRule(String hostName) {
		return CrawlConf.getConf().getRule(hostName);
	}
	
	private final static Configuration conf = new Configuration();
	
	public static Configuration getConf (){
		return conf;
	}

	public static void main(String[] args) {
		System.out.println(CrawlConf.getConf().getRule("www.innohub.net"));
	}
